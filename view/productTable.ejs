<%-include('head.ejs')%>

    <div class="container mt-3">
 <table class="table table-hover">
            <thead>
                <tr>
                    <th>productName</th>
                    <th>productPrice</th>
                    <th>productQuantity</th>
                    <th>productDescription</th>
                    <th>Image</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<allData.length; i++){ %>
                    <tr>
                        <td>
                            <%= allData[i].productName %>
                        </td>
                        <td>
                            <%= allData[i].productPrice %></td>
                        <td>
                            <%= allData[i].productQuantity %></td>
                        <td>
                            <%= allData[i].productDescription %></td>
                        
                        
                            <td>
                            <img src="/<%= allData[i].productImage[0].path %>" style="width:40px;">
                                </td>
                            
                            <td>
                            <form action="/product/delete" method="post">
                                <input type="hidden" name="product_id" value="<%= allData[i]._id%>">
                                <button type="submit">delete</button>
                            </form>
                        </td>
                        <td>
                            <form action="/product/getEditProduct" method="post">
                            <input type="hidden" name="product_id" value="<%=allData[i]._id %>">
                            <button type="submit">edit product</button>
                            </form>
                        </td>
                    </tr>

                    <%}%>

            </tbody>
            

            
        </table>
    </div>
    <%-include('footer.ejs')%>